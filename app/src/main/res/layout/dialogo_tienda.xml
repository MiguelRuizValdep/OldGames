<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:background="@drawable/fondo_dialogo_tienda"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="4">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/dialogFoto"
                android:scaleType="center">

            </ImageView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="6"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="vertical"
                android:gravity="center">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dlgCalleNumero"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold">

                </TextView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dlgCpostal"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold">

                </TextView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dlgProvincia"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" >

                </TextView>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/llamar"
                    android:id="@+id/btnDlgLLamar"
                    android:layout_gravity="center"
                    android:background="@drawable/selector_envio_mensaje"
                    android:textColor="@color/negro"
                    android:textStyle="bold">
                </Button>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/web"
                    android:id="@+id/btnDlgWeb"
                    android:layout_gravity="center"
                    android:background="@drawable/selector_envio_mensaje"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/negro"
                    android:textStyle="bold">
                </Button>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>